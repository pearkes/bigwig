{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["ES2022", "DOM"],
		"types": ["bun-types"],
		"resolveJsonModule": true,
		"allowJs": false,
		"noImplicitAny": false,
		"strict": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"]
}
